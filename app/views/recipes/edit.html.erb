<label>Edit Recipe</label><br>  
<%= form_for(@recipe) do |f| %>
     <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>

      Ingredients:
    </div>
  
    <div class="field">
      <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :name %><br>
      <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredients_fields| %>
        <%= ingredients_fields.text_field :name, id: "Name" %>
      <% end %>
    </div>
  
    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>

  